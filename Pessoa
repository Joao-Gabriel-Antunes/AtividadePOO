public class Pessoa {

    private String nome;
    private int idade;
    private LocalDate nascimento;

    public Pessoa(String nome, int idade, LocalDate dataNascimento){

        this.nome = nome;
        this.idade = idade;
        this.nascimento = nascimento;

    }

    public String getNome(){

        return this.nome;

    }

    public int getIdade(){

        return this.idade;

    }

    public LocalDate getnascimento() {

        return nascimento;

    }
}
